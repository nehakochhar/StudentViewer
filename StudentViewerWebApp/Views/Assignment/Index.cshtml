@model int
@{
    ViewBag.Title = "Assignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var studentId = Url.RequestContext.RouteData.Values["studentId"];
}

<script src="~/Scripts/Custom/assignment.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var getStudentAssignmentsUrl = '@Url.Action("GetStudentAssignments",new { studentId=Model})';
        assignmentProvider.getStudentAssignments(getStudentAssignmentsUrl);
    });
</script>

<div class="row">
    <div class="col-lg-12">
        <br />
        <h3>Student Assignments</h3>
        <br />
        <table class="table table-striped table-hover" id="assignmentsList">
            <thead>
                <tr>
                    <th>Assignment Name</th>
                    <th>Due Date</th>
                    <th>Max Score</th>
                    <th>Completion Date</th>
                    <th>Score Earned</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
