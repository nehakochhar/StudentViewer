@model int
@{
    ViewBag.Title = "Enrollments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Custom/enrollment.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var getStudentEnrollmentsUrl = '@Url.Action("GetStudentEnrollments",new { studentId = Model})';
        enrollmentProvider.getStudentEnrollments(getStudentEnrollmentsUrl);
    });
</script>

<div class="row">
    <div class="col-lg-12">
        <br />
        <h3>Student Enrollments</h3>
        <br />
        <table class="table table-striped table-hover" id="enrollmentsList">
            <thead>
                <tr>
                    <th>Entry Date</th>
                    <th>Exit Date</th>
                    <th>Exit Reason</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
