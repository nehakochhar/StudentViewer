@{
    ViewBag.Title = "Student Dashboard";
}

<script src="~/Scripts/Custom/index.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        indexProvider.AssignmentUrl = '@Html.ActionLink("Assignments", "Index", "Assignment", new { studentId = "_studentId" }, null)';
        indexProvider.EnrollmentUrl = '@Html.ActionLink("Enrollments", "Index", "Enrollment", new { studentId = "_studentId" }, null)';
        var getAllStudentsUrl = '@Url.Action("GetAllStudents", "Home")';
        indexProvider.getAllStudents(getAllStudentsUrl);
    });
</script>

<div class="row">
    <div class="col-lg-12">
        <br />
        <h3>Students List</h3>
        <br />
        <table class="table table-striped table-hover" id="studentList">
            <thead>
                <tr>
                    <th>Student Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Grade</th>
                    <th>School Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>